# =============================================================================
# {{ PROJECT_NAME }} - pyproject.toml
# =============================================================================
# Generated by Vibe Coding Framework 2026
# =============================================================================

[project]
name = "{{ project_name_lower }}"
version = "0.1.0"
description = "{{ project_description }}"
readme = "README.md"
requires-python = ">=3.11"
license = {text = "MIT"}
authors = [
    {name = "{{ author_name }}"}
]
keywords = [{{ keywords }}]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]

# =============================================================================
# Dependencies - Managed by uv
# =============================================================================
dependencies = [
    # Core
    "pydantic>=2.5",
    "pydantic-settings>=2.1",

    # HTTP
    "httpx>=0.26",

    # Logging
    "structlog>=24.1",

    # CLI
    "typer>=0.9",
    "rich>=13.7",

    # Environment
    "python-dotenv>=1.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=8.0",
    "pytest-cov>=4.1",
    "pytest-asyncio>=0.23",
    "pytest-mock>=3.12",
    "ruff>=0.1.9",
    "mypy>=1.8",
    "pre-commit>=3.6",
]

[project.scripts]
{{ project_name_lower }} = "src.interfaces.cli.main:app"

[project.urls]
Homepage = "https://github.com/{{ github_user }}/{{ PROJECT_NAME }}"
Repository = "https://github.com/{{ github_user }}/{{ PROJECT_NAME }}"

# =============================================================================
# Dependency Groups (uv 2026 best practices)
# =============================================================================
[dependency-groups]
dev = [
    "pytest>=8.0",
    "pytest-cov>=4.1",
    "pytest-asyncio>=0.23",
    "pytest-mock>=3.12",
    "ruff>=0.1.9",
    "mypy>=1.8",
    "pre-commit>=3.6",
]

# =============================================================================
# Ruff - Linter & Formatter
# =============================================================================
[tool.ruff]
line-length = 100
target-version = "py311"
preview = true

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
docstring-code-format = true

[tool.ruff.lint]
select = [
    "E", "W", "F", "I", "B", "C4", "UP", "ARG", "SIM",
    "TCH", "PTH", "ERA", "PL", "RUF", "S", "ASYNC", "ANN",
]
ignore = ["E501", "B008", "PLR0913", "PLR2004", "ANN101", "ANN102"]

[tool.ruff.lint.per-file-ignores]
"tests/**/*.py" = ["S101", "ARG", "PLR2004", "ANN"]

[tool.ruff.lint.isort]
known-first-party = ["src"]

# =============================================================================
# MyPy - Type Checker
# =============================================================================
[tool.mypy]
python_version = "3.11"
strict = true
ignore_missing_imports = true
show_error_codes = true

# =============================================================================
# Pytest
# =============================================================================
[tool.pytest.ini_options]
minversion = "8.0"
testpaths = ["tests"]
asyncio_mode = "auto"
addopts = ["-ra", "-q", "--strict-markers", "-v", "--tb=short"]

# =============================================================================
# Coverage
# =============================================================================
[tool.coverage.run]
source = ["src"]
branch = true

[tool.coverage.report]
show_missing = true

# =============================================================================
# Build System
# =============================================================================
[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src"]
